<h2><%=@artist.name%></h2>

<% @artist.songs.each do |song| %>
    <p>Song: <a href = '/songs/<%=song.slug%>'><%=song.name%></a></p>
    <%song_genre = SongGenre.find_by(song_id:song.id)%>
    <p>Genres:</p>
    <ul>
    <% song.genres.each do |genre| %>
        <li><a href = '/genres/<%=genre.slug%>'><%=genre.name%></a></li>
    <% end %>
    </ul>
<% end %>