<h1>Edit Song</h1>

<form action='/songs/<%=@song.slug%>' method='post'>
    <input type='hidden' name='_method' value='patch'>
    <p>Song Name:<input type = 'text' name = 'song_name' id = 'Name' value = '<%=@song.name%>'></p>
    <p>Artist Name:<input type = 'text' name = 'artist_name' id='Artist Name' value = '<%=@song.artist.name%>'></p>
    <h3>Genres:</h3>
    <% @genres.each do |genre| %>
        <% if @song.genres.include?(genre) %>
            <p><input type = 'checkbox' name='genre_name[]' id='<%= genre.name %>' value='<%=genre.name%>' checked> <%=genre.name%></p>
        <% else %>
            <p><input type = 'checkbox' name='genre_name[]' id='<%= genre.name %>' value='<%=genre.name%>'> <%=genre.name%></p>
        <% end %>
    <% end %>
    <input type = 'submit' id='Update' value='Save'>
 </form>